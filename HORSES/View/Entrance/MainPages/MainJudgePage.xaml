<Page x:Class="HORSES.View.Entrance.MainPages.MainJudgePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HORSES.View.Entrance.MainPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="AliceBlue" Margin="10">
        <Border BorderBrush="DarkGray" BorderThickness="2" CornerRadius="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Image Source="\Resources\JudgeIcon.png" Height="150" Margin="0,0,0,10" VerticalAlignment="Top" HorizontalAlignment="Center"/>

                <Grid Grid.Row="1" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5">
                        <Button Content="Назначение дорожки" Width="300" Height="50" Margin="5" Background="#FF6699FF" Foreground="White" FontWeight="Bold" Click="Track_Assignment_Click"/>
                        <Button Content="Просмотр информации об участниках" Width="300" Height="50" Margin="5" Background="#FF6699FF" Foreground="White" FontWeight="Bold" Click="Viewing_Information_About_Participants_Click"/>
                        <Button Content="Ввод и редактирование об результотов заезда" Width="300" Height="50" Margin="5" Background="#FF6699FF" Foreground="White" FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5">
                        <Button Content="Просмотр результатов заезда" Width="300" Height="50" Margin="5" Background="#FF6699FF" Foreground="White" FontWeight="Bold" Click="Viewing_Check_Results_Click"/>
                        <Button Content="Ввод информации о нарушениях участников" Width="300" Height="50" Margin="5" Background="#FF6699FF" Foreground="White" FontWeight="Bold" Click="Violations_Click"/>
                        <Button Content="Отчет о результатах заездах" Width="300" Height="50" Margin="5" Background="#FF6699FF" Foreground="White" FontWeight="Bold" Click="Report_Click"/>
                    </StackPanel>
                </Grid>

                <Button Grid.Row="2" Content="Вернуться на главную форму" Width="310" Height="50" Margin="5" Name="BTN_BACK_MAIN" Click="BTN_BACK_MAIN_Click" Background="#FFD6D6D6" Foreground="Black" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
            </Grid>
        </Border>
    </Grid>
</Page>
