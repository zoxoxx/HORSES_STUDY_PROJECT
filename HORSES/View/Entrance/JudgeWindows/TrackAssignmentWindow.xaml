<Window x:Class="HORSES.View.Entrance.JudgeWindows.TrackAssignmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:HORSES.View.Entrance.JudgeWindows"
        mc:Ignorable="d"
        Title="Назначение дорожки" Height="550" Width="600"
        Background="#F0F4F8" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="Background" Value="#1E88E5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#1E88E5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button" x:Key="FocusedButtonStyle">
            <Setter Property="Background" Value="#1565C0"/>
            <Setter Property="BorderBrush" Value="#1565C0"/>
        </Style>
    </Window.Resources>
    <Grid Loaded="Grid_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" FontSize="24" FontWeight="Bold" Foreground="#0277BD" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20">
            <TextBlock.Inlines>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <material:PackIcon Kind="HorseVariant" Width="30" Height="30" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TitleTextBlock" Text="Назначение дорожки" VerticalAlignment="Center"/>
                </StackPanel>
            </TextBlock.Inlines>
        </TextBlock>

        <StackPanel Grid.Row="1" Margin="20">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10">
                <material:PackIcon Kind="FlagCheckered" Width="24" Height="24" Foreground="#1E88E5" VerticalAlignment="Center"/>
                <TextBlock Text="Заезд:" FontSize="16" FontWeight="Medium" Foreground="#616161" VerticalAlignment="Center" Margin="10,0"/>
            </StackPanel>
            <ComboBox x:Name="RaceComboBox" Height="40" Margin="0,5" Padding="10" BorderBrush="#B0BEC5" BorderThickness="1" FontSize="14" VerticalAlignment="Center" DropDownOpened="RaceComboBox_DropDownOpened" SelectedValuePath="Id" DisplayMemberPath="Name"/>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,20,0,5">
                <material:PackIcon Kind="RoadVariant" Width="24" Height="24" Foreground="#1E88E5" VerticalAlignment="Center"/>
                <TextBlock Text="Дорожка" FontSize="16" FontWeight="Medium" Foreground="#616161" VerticalAlignment="Center" Margin="10,0"/>
            </StackPanel>
            <ComboBox x:Name="TrackComboBox" Height="40" Margin="0,5" Padding="10" BorderBrush="#B0BEC5" BorderThickness="1" FontSize="14" VerticalAlignment="Center" DisplayMemberPath="Number" SelectedValuePath="Id" DropDownOpened="TrackComboBox_DropDownOpened"/>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,20,0,5">
                <material:PackIcon Kind="Account" Width="24" Height="24" Foreground="#1E88E5" VerticalAlignment="Center"/>
                <TextBlock Text="Жокей" FontSize="16" FontWeight="Medium" Foreground="#616161" VerticalAlignment="Center" Margin="10,0"/>
            </StackPanel>
            <ComboBox x:Name="JockeyComboBox" Height="40" Margin="0,5" Padding="10" BorderBrush="#B0BEC5" BorderThickness="1" FontSize="14" VerticalAlignment="Center" DisplayMemberPath="Phyo" SelectedValuePath="Id"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,20">
            <Button Width="150" Height="45" Margin="10,0" Click="Save_Click">
                <Button.Content>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <material:PackIcon Kind="ContentSave" Width="20" Height="20" Margin="5,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Сохранить" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button.Content>
            </Button>

            <Button Width="150" Height="45" Margin="10,0" Click="Close_Click">
                <Button.Content>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <material:PackIcon Kind="Cancel" Width="20" Height="20" Margin="5,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Отмена" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button.Content>
            </Button>
        </StackPanel>
    </Grid>
</Window>
